<div class="min-h-screen bg-gray-50">
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-8">
    <%= render "shared/card" do %>
      <div class="flex items-center justify-between mb-6">
        <div>
          <h1 class="text-2xl font-bold text-gray-900">안녕하세요, <%= @user.display_name %>님!</h1>
          <p class="text-sm text-gray-500 mt-1">
            <%= render "shared/badge", role: @user.role %>
          </p>
        </div>
        <div>
          <%= button_to "로그아웃", destroy_user_session_path,
              method: :delete,
              class: "inline-flex items-center px-4 py-2 border border-gray-300 rounded-md shadow-sm text-sm font-medium text-gray-700 bg-white hover:bg-gray-50 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-blue-500" %>
        </div>
      </div>

      <div class="border-t border-gray-200 pt-6">
        <h2 class="text-lg font-medium text-gray-900 mb-4">대시보드</h2>

        <% if @user.student? %>
          <div class="grid grid-cols-1 gap-6 sm:grid-cols-2 lg:grid-cols-3">
            <%= render "shared/card", variant: :blue, title: "질문 생성 연습", subtitle: "새로운 콘텐츠로 질문 만들기를 연습하세요." do %>
              <div class="mt-2">
                <%= render "shared/badge", text: "준비 중", variant: :gray %>
              </div>
            <% end %>

            <%= render "shared/card", variant: :green, title: "내 기록", subtitle: "지금까지 작성한 질문과 피드백을 확인하세요." do %>
              <div class="mt-2">
                <%= render "shared/badge", text: "준비 중", variant: :gray %>
              </div>
            <% end %>

            <%= render "shared/card", variant: :purple, title: "성장 리포트", subtitle: "나의 발문 능력 성장 과정을 확인하세요." do %>
              <div class="mt-2">
                <%= render "shared/badge", text: "준비 중", variant: :gray %>
              </div>
            <% end %>
          </div>
        <% elsif @user.teacher? %>
          <div class="grid grid-cols-1 gap-6 sm:grid-cols-2 lg:grid-cols-3">
            <%= render "shared/card", variant: :blue, title: "콘텐츠 관리", subtitle: "학습 자료를 등록하고 관리하세요." do %>
              <div class="mt-2">
                <%= render "shared/badge", text: "준비 중", variant: :gray %>
              </div>
            <% end %>

            <%= render "shared/card", variant: :green, title: "학생 관리", subtitle: "학생들의 학습 현황을 확인하세요." do %>
              <div class="mt-2">
                <%= render "shared/badge", text: "준비 중", variant: :gray %>
              </div>
            <% end %>

            <%= render "shared/card", variant: :purple, title: "리포트", subtitle: "학급 전체의 학습 분석 리포트를 확인하세요." do %>
              <div class="mt-2">
                <%= render "shared/badge", text: "준비 중", variant: :gray %>
              </div>
            <% end %>
          </div>
        <% else %>
          <div class="grid grid-cols-1 gap-6 sm:grid-cols-2">
            <%= render "shared/card", variant: :red, title: "사용자 관리", subtitle: "전체 사용자를 관리하세요." do %>
              <div class="mt-2">
                <%= render "shared/badge", text: "준비 중", variant: :gray %>
              </div>
            <% end %>

            <%= render "shared/card", variant: :yellow, title: "시스템 설정", subtitle: "시스템 전체 설정을 관리하세요." do %>
              <div class="mt-2">
                <%= render "shared/badge", text: "준비 중", variant: :gray %>
              </div>
            <% end %>
          </div>
        <% end %>
      </div>
    <% end %>
  </div>
</div>
